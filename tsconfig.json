{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./build",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "test/*": ["test/*"]
      }
    },
    // "include": [ "src/**/*"],
    // "exclude" : ["src/**/*.test.ts"]
  }
